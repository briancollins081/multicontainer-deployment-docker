{
    "AWSEBDockerrunVersion": 3,
    "containerDefinitions": [{
            "name": "client",
            "image": "briancollins081/multicontainer_client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "briancollins081/multicontainer_server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "briancollins081/multicontainer_worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "briancollins081/multicontainer_nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [{
                "hostPort": 80,
                "containerPort": 80
            }],
            "links": [
                "server", "client"
            ]
        }

    ]
}